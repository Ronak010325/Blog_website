<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
    <title>My Blogs</title>
    <link href="./style/main.css" rel="styleSheet">
    
</head>
<body>
    <div class="outter_container">
        
        <%- include("partials/header.ejs") %>

        <div class="inner_container">
            <%- include("partials/sidebar.ejs") %>


            <div class="display">
                <% if (locals.title && locals.body) { %>
                <div class="blog">
                    <div class="row">
                        <h1 id="title"> <%= title %> </h1>
                        <div class="center">
                            <a href="/edit"> <span>Edit</span> </a>
                        </div>
                        <div class="center">
                            <span id="del">Del</span>
                        </div>
                    </div>
                    <hr width="90%">
                    <p id="body"> <%= body %> </p>
                </div>
                <% } else { %>
                <p>Your Blogs will be Displayed Here.</p>
                <% } %>
            </div>

        </div>
    </div>
    <script>

        const element = document.getElementById("del");
        element.addEventListener("click" , del);
        function del() {
            this.parentElement.parentElement.parentElement.remove();
        }

    </script>
</body>
</html>